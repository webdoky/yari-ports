{
  "name": "@webdoky/yari-ports",
  "version": "2.20.0",
  "description": "Wrapper around @mdn/yari, containing facade layer between Webdoky platform and Yari, as well as some ported Kuma macros",
  "main": "lib/index.js",
  "repository": "github:webdoky/yari-ports",
  "type": "module",
  "scripts": {
    "test": "ava test/**/*.js test/**/*.mjs",
    "test-watch": "ava --watch --verbose",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.18.6",
    "@mdn/browser-compat-data": "^4.1.2",
    "@mdn/yari": "^1.7.0",
    "ava": "^3.15.0",
    "browser-specs": "^2.19.3",
    "eslint-plugin-node": "^11.1.0",
    "mdn-data": "^2.0.26",
    "rollup": "^2.75.7",
    "sanitize-filename": "^1.6.3",
    "unist-builder": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/git": "^10.0.1",
    "eslint": "8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.3.2",
    "semantic-release": "^18.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        220
      ],
      "body-max-line-length": [
        2,
        "always",
        220
      ]
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-import-assertions"
    ]
  },
  "author": "Webdoky",
  "license": "MPL-2.0"
}
