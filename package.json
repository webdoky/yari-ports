{
  "name": "@webdoky/yari-ports",
  "version": "3.1.0",
  "description": "Wrapper around @mdn/yari, containing facade layer between Webdoky platform and Yari, as well as some ported Kuma macros",
  "main": "lib/index.js",
  "repository": "github:webdoky/yari-ports",
  "type": "module",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "fix": "eslint . --fix",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "ava --coverage",
    "test-watch": "ava --watch --verbose"
  },
  "dependencies": {
    "@mdn/browser-compat-data": "^4.1.2",
    "@mdn/yari": "^1.7.0",
    "browser-specs": "^2.19.3",
    "esm-resolve": "^1.0.8",
    "filenamify": "^5.1.1",
    "mdn-data": "^2.0.26",
    "unist-builder": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/preset-env": "^7.18.6",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/git": "^10.0.1",
    "ava": "^3.15.0",
    "eslint": "~8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^7.0.4",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "semantic-release": "^18.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        220
      ],
      "body-max-line-length": [
        2,
        "always",
        220
      ]
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-syntax-import-assertions"
    ]
  },
  "author": "Webdoky",
  "license": "MPL-2.0"
}
